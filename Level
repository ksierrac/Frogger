import java.util.Timer;
import java.util.TimerTask;


public class Level {
	private int numberofObstacles;
	private int levelNumber;
	private Timer time = new Timer();
	private int seconds = 1000;
	public int curtime = 1;
	
	public int getNumberofObstacles() {
		return numberofObstacles;
	}
	
	public void setNumberofObstacles(int numberofObstacles) {
		this.numberofObstacles = numberofObstacles;
	}
	
	public int getLevelNumber() {
		return levelNumber;
	}
	
	public void setLevelNumber(int levelNumber) {
		this.levelNumber = levelNumber;
	}
	
	public void setTimer(int duration) {
		seconds = duration*1000;
	}
	
	public void startTimer(long timerdur) {
		
		this.time.schedule(new test(), timerdur*1000, 1000);
		this.time.cancel();
	
		
	}
	public int getSeconds(){
		return this.seconds;
	}
	
	class test extends TimerTask{
	
		private int seconds = getSeconds();
		
		public void run(){
			
			if (seconds/1000 >= curtime){
				System.out.println(seconds/1000 - curtime);
				curtime += 1;
			}
			if (seconds/1000 - curtime == -1){
			}
		}
	}
}
